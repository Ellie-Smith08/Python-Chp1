# 1
print("Using for loop:")
for i in range(1, 11):
    print(i)

# Using while loop
print("Using while loop:")
i = 1
while i <= 10:
    print(i)
    i += 1

# 2
max_value = int(input("Enter a value: "))

# Print odd numbers from 1 to max_value
print("Odd numbers:")
for i in range(1, max_value + 1):
    if i % 2 != 0:
        print(i)



#3
sentence = input("Enter a sentence: ")
vowels = "aeiouAEIOU"
count = 0

for char in sentence:
    if char in vowels:
        count += 1

print("Number of vowels:", count)


#4
sentence = input("Enter a sentence: ")
reversed_sentence = ""

for i in range(len(sentence) - 1, -1, -1):
    reversed_sentence += sentence[i]

print("Reversed sentence:", reversed_sentence)



#5
sentence = input("Enter a sentence: ")
char = input("Enter a single character to count: ")

count = 0
for c in sentence:
    if c == char:
        count += 1

print(f"The character '{char}' occurs {count} time(s).")




